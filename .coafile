# note: put developer specific settings into ~/.coarc (e.g. editor = ...)

# defaults inherited by all sections:
max_line_length = 255
use_spaces = True

[general]
files = borg/**/*.(py|pyx|c)
ignore = borg/(chunker.c|compress.c|crypto.c|hashindex.c|platform_*.c)
bears = SpaceConsistencyBear, FilenameBear, InvalidLinkBear, LineLengthBear
file_naming_convention = snake


[py]
files = borg/**/*.py
bears = PEP8Bear, PyDocStyleBear, PyLintBear
pep_ignore = E122,E123,E125,E126,E127,E128,E226,E301,E309,E402,F401,F405,F811,W690
pylint_disable = C0103, C0111, C0112, C0301, C0302, C0325, C0330, C0411, C0412, C0413,
                 W0102, W0104, W0106, W0108, W0120, W0201, W0212, W0221, W0231, W0404,
                 W0511, W0603, W0611, W0612, W0613, W0621, W0622, W0702, W0703,
                 W1201, W1202, W1401, W1503, W1505,
                 R0101, R0201, R0204, R0902, R0903, R0904, R0911, R0912, R0913, R0914, R0915,
                 E0102, E0401, E0611, E1101
pydocstyle_ignore = D100, D101, D102, D103, D104, D105, D200, D201, D202, D203, D204, D205, D209, D210,
                    D301, D400, D401, D403

[c]
files = borg/**/*.c
ignore = borg/(chunker.c|compress.c|crypto.c|hashindex.c|platform_*.c)
bears = CPPCheckBear
